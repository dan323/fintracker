{
    "compilerOptions": {
        "lib": [
            "dom",
            "es2020"
        ], // Add 'dom' for browser APIs
        "target": "es2020",
        "jsx": "react-jsx", // Use "react-jsx" for React 17+ or "react" for older versions
        "allowSyntheticDefaultImports": true, // Recommended for React
        "esModuleInterop": true, // Enables compatibility with CommonJS modules
        "moduleResolution": "node", // Ensures node-style module resolution
        "baseUrl": "./",
        "paths": {
            "*": [
                "src/*"
            ]
        }
    }
}